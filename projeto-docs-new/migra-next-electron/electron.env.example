# ‚ö° Electron Environment Variables Example

# ===========================================
# üåê Application URLs
# ===========================================

# URL do Next.js em desenvolvimento
NEXT_DEV_URL=http://localhost:3000

# URL de produ√ß√£o (shell remoto)
NEXT_PROD_URL=https://app.seudominio.com

# Porta do Next.js dev server
NEXT_PORT=3000

# ===========================================
# üîê OAuth / Authentication
# ===========================================

# OAuth Client ID (para desktop)
AUTH_CLIENT_ID=your-desktop-client-id

# OAuth Authorization URL
AUTH_URL=https://accounts.yourprovider.com/oauth/authorize

# OAuth Token URL
AUTH_TOKEN_URL=https://accounts.yourprovider.com/oauth/token

# Redirect URI (loopback localhost)
AUTH_REDIRECT_URI=http://127.0.0.1:17321/callback

# OAuth Scopes (espa√ßo separado)
AUTH_SCOPES=openid profile email

# ===========================================
# üé≠ MCP Configuration
# ===========================================

# Habilitar MCP (Playwright)
MCP_ENABLED=true

# Comando para iniciar MCP (padr√£o: npx @playwright/mcp@latest)
MCP_COMMAND=npx
MCP_ARGS=@playwright/mcp@latest

# Timeout de inicializa√ß√£o do MCP (ms)
MCP_STARTUP_TIMEOUT=10000

# ===========================================
# üõ°Ô∏è Security
# ===========================================

# Allowlist de dom√≠nios permitidos (v√≠rgula separado)
ALLOWED_DOMAINS=localhost:3000,app.seudominio.com,cdn.seudominio.com

# Habilitar DevTools em produ√ß√£o (NUNCA em release final)
ENABLE_DEVTOOLS=false

# Habilitar sandbox (SEMPRE true em produ√ß√£o)
ENABLE_SANDBOX=true

# ===========================================
# üì¶ Build Configuration
# ===========================================

# App ID (electron-builder)
APP_ID=com.yourcompany.ai-chatbot

# Product Name
PRODUCT_NAME=AI Chatbot

# Vers√£o (sync com package.json)
APP_VERSION=3.1.0

# ===========================================
# üîÑ Auto Update
# ===========================================

# Habilitar auto-update
AUTO_UPDATE_ENABLED=true

# URL do servidor de updates
UPDATE_SERVER_URL=https://updates.seudominio.com

# Canal de updates (stable, beta, dev)
UPDATE_CHANNEL=stable

# ===========================================
# üìä Telemetry / Analytics
# ===========================================

# Habilitar analytics
ANALYTICS_ENABLED=true

# Sentry DSN (crash reporting)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Environment (development, staging, production)
SENTRY_ENVIRONMENT=production

# ===========================================
# üêõ Debug / Development
# ===========================================

# Modo de desenvolvimento
NODE_ENV=development

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Habilitar logs verbose
VERBOSE_LOGS=false

# Porta de debug remoto
DEBUG_PORT=5858

# ===========================================
# üóÑÔ∏è Database (compartilhado com Next.js)
# ===========================================

# Postgres URL (mesmo do Next.js)
# NOTA: Electron usa a mesma DB que o Next.js
POSTGRES_URL=postgresql://user:pass@localhost:5432/chatbot

# ===========================================
# üîß Paths & Directories
# ===========================================

# Diret√≥rio de logs
LOG_DIR=./logs

# Diret√≥rio de cache
CACHE_DIR=./cache

# Diret√≥rio de user data (padr√£o: app.getPath('userData'))
# USER_DATA_DIR=

# ===========================================
# üé® UI Configuration
# ===========================================

# Mostrar menu nativo (Windows/Linux)
SHOW_NATIVE_MENU=true

# Iniciar minimizado
START_MINIMIZED=false

# Iniciar com sistema
START_WITH_OS=false

# Sempre no topo
ALWAYS_ON_TOP=false

# ===========================================
# üöÄ Performance
# ===========================================

# Limite de mem√≥ria (MB)
